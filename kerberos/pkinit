#!/usr/bin/env bash
if [[ $1 == -f ]]; then
	# Running from PAM
	(su -l -c "'$0'" "$PAM_USER" |& logger -p user.debug -t pkinit) &
	exit
fi

realm="$(pklist -R)"
princ="$(whoami)@$realm"

X509_IDENTITY="FILE:$HOME/.pki/private/pkinit#$princ.pem"

err="Internal error"
nm-online -qt 600
{
	ecryptfs-mount-x11 && {
		err=$(kinit -X X509_user_identity="$X509_IDENTITY" "$princ" <<< "X" 2>&1)
	} <<< "bogus"
} || exec notify \
	-s '+pkinit' \
	-A \
	-i error \
	"Kerberos login failed" \
	"$err"
