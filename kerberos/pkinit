#!/usr/bin/env bash
if [[ $1 == -f ]]; then
	# Running from PAM
	(su -l -c "'$0'" "$PAM_USER" |& logger -p user.debug -t pkinit) &
	exit
fi

realm="$(pklist -R)"
princ="$(whoami)@$realm"

X509_IDENTITY="FILE:$HOME/.pki/private/pkinit#$princ.pem"

err="Internal error"
nm-online -qt 600
{
	if [[ $DISPLAY ]]; then
		ecryptfs-mount-x11
	else
		mountpoint -q ~/Private
	fi && {
		err=$(kinit -X X509_user_identity="$X509_IDENTITY" "$princ" <<< "X" 2>&1)
	} <<< "bogus"
} || if [[ $DISPLAY ]]; then
	notify \
		-s '+pkinit' \
		-A \
		-i error \
		"Kerberos login failed" \
		"$err"
	exit 1
else
	echo "Kerberos login failed: $err" >&2
	exit 1
fi
