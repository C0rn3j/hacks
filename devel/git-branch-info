#!/bin/sh
# git-branch-info - verbose branch list
git branch --list --all --no-color |
sed -e 's/*/ /' |
while read branch; do
	width=20
	ref=$branch
	case $ref in
	remotes/*)	color='magenta'; branch=${branch#remotes/};;
	*)		color='yellow';;
	esac
	printf -v wbranch "%-*s" "$width" "$branch"
	printf -v windent "%-*s" "${#wbranch}" ""
	git log -1 --format=format:"%C($color)${wbranch}%C(reset) %s %C(blue)(%cr)%C(reset)" "$branch"
done
