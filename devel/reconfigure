#!/usr/bin/env bash

if [[ configure.ac -nt configure ]] ||
   [[ configure.in -nt configure ]] ||
   [[ autogen.sh   -nt configure ]]; then
	if [[ -e autogen.sh ]]; then
		(NOCONFIGURE=1 ./autogen.sh)
	else
		(autoreconf -fi)
	fi
fi

if [[ -e config.log ]]; then
	sed -n '/^  \$ /{s///;p;q}' config.log | sh
else
	(./configure --prefix="$PREFIX")
fi
