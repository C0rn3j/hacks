#!/bin/bash
echo "For bug: https://bugzilla.gnome.org/show_bug.cgi?id=670164"
set -x
if [[ $1 == undo ]]; then
	sudo pacman -Sf --noconfirm --noprogressbar xorg-xkbcomp
	gsettings set org.gnome.settings-daemon.plugins.keyboard active true
else
	gsettings set org.gnome.settings-daemon.plugins.keyboard active false
	sudo ln -sf /bin/true /usr/bin/xkbcomp
fi
