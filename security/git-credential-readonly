#!/usr/bin/env perl
use warnings;
use strict;

sub _warn { warn "$0: @_\n"; }

my ($helper, @args) = @ARGV;
my $action = pop @ARGV;

sub exec_helper {
	exec {"git"} "git", "credential-$helper", @args;
}

if ($action eq "get") {
	exec_helper();
}
elsif ($action eq "store") {
	_warn("ignoring store to credential-$helper");
}
elsif ($action eq "erase") {
	_warn("ignoring erase from credential-$helper");
}
