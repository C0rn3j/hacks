#!/usr/bin/env bash

. lib.bash

filter() { perl -pe 's/\033/"^".chr(ord($&)+0100)/ge'; }

urlencode() { ~grawity/code/bin/urlencode "$@"; }

set -o pipefail

detail=0

while getopts "l" OPT; do
	case $OPT in
	'l') detail=1;;
	esac
done

shift $((OPTIND-1))
query=$1

if (( detail )); then
	query="/W $query"
fi

if [[ $query == *@* ]]; then
	host=${query##*@}
	query=${query%@*}
else
	host=${FINGER_HOST:-localhost}
fi

if [[ $host == *:* ]]; then
	uhost=[$host]
else
	uhost=$host
fi

uquery=$(urlencode -- "$query")

if have curl && curl -V | grep -wqs gopher; then
	curl -sS "gopher://$uhost:79/0$uquery"
elif have curl && curl -V | grep -wqs telnet; then
	printf '%s\r\n' "$query" | curl -sS "telnet://$uhost:79"
elif have ncat; then
	# oneaddr
	printf '%s\r\n' "$query" | ncat "$host" 79
elif have socat; then
	# oneaddr
	printf '%s\r\n' "$query" | socat -t10 -T10 stdio "tcp:$uhost:79"
elif have lynx; then
	# adds own header, footer
	lynx -dump "finger://$host/$uquery"
elif have nc; then
	# may be IPv4-only, may be oneaddr
	printf '%s\r\n' "$query" | nc "$host" 79
else
	echo "fbin/finger: No useful TCP client found." >&2
	exit 1
fi | filter
