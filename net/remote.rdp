#!/bin/bash
. ~/code/lib/bash/cred

host=$1
[[ $host ]] || exit 2

args=(-N -P -r disk:"home=$HOME" -r disk:"root=/"
	-r sound:"local" -r clipboard:"CLIPBOARD" "$@")

getcred_var "$host" "tsclient" "Remote Desktop" user pass

[[ $user ]]	&& args+=(-u "$user")
[[ $pass ]]	&& args+=(-p -)

exec rdesktop "${args[@]}" <<< "$pass"
