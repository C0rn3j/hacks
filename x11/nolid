#!/bin/sh
# nolid - disable suspend and lid-close handling while a command runs

lock="$XDG_RUNTIME_DIR/nolid.lock"
hold="$XDG_RUNTIME_DIR/nolid.hold"

export _NOLID=1

notify=0

case $1 in
	-h|--hold)
		touch "$hold"
		spawn -dc nolid inotifywait -qqe delete_self "$hold" &
		echo "Held."
		exit;;
	-r|--unhold|--release)
		rm -f "$hold"
		echo "Released."
		exit;;
	-n|--notify)
		notify=1
		shift;;
esac

name="nolid"
if [ -t 0 ]; then
	tty=$(tty)
	name="$name on ${tty#/dev/}"
	settitle "nolid${1:+: $1}"
fi

t_start=$(date +%s)

touch "$lock"

trap 'flock -xn "$lock" rm -f "$lock"' EXIT

flock -s "$lock" \
	systemd-inhibit --who="$name" \
	--what="sleep:handle-lid-switch" \
	--why="Manually inhibited" \
	gnome-inhibit --always \
	--who="$name" \
	--what="suspend" \
	--why="Manually inhibited" \
	"${@:-pause}"

r=$?

t_end=$(date +%s)

if [ $notify -eq 1 ]; then
	seconds=$(expr $t_end - $t_start)
	duration=$(interval $seconds)
	if [ $r -eq 0 ]; then
		msg="exited successfully"
	else
		msg="failed (exit status $r)"
	fi
	notify-send "Lid inhibit removed" "'$1' $msg after $duration"
fi

exit $r
