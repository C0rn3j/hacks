#!/usr/bin/env bash

_todo_show() {
	nl -ba ~/lib/todo -w3 -s"  "
}

todo() {
	if [[ ! -d ~/lib ]]; then
		mkdir -p ~/lib
	fi

	if [[ -f ~/todo ]] && [[ ! -e ~/lib/todo ]]; then
		mv ~/todo ~/lib/todo
		ln -s 'lib/todo' ~/todo
	fi

	if [[ $1 ]]; then
		echo "$(date +"%b %d, %Y") â€“ $*" >> ~/lib/todo
		_todo_show | tail -n1
	elif [[ -s ~/lib/todo ]]; then
		_todo_show
	fi
}

vitodo() {
	eval "${EDITOR:-vi} ~/lib/todo"
}

rmtodo() {
	local tmp=~/lib/.todo.tmp
	sed "${1:-\$}d" ~/lib/todo > "$tmp" && cp "$tmp" ~/lib/todo && rm -f "$tmp"
}


case ${0##*/} in
'todo')		todo "$@";;
'vitodo')	vitodo "$@";;
'rmtodo')	rmtodo "$@";;
esac
