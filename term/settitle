#!/usr/bin/env bash

usage() {
	echo "usage: ${0##*/} [-e] [-w] <title>" >&2
	exit 2
}

ESC='\e' ST='\e\\' BEL='\007' EOL='' MODE='title'

if getopts "ew" OPT; then
	case $OPT in
	'e')	ESC='\\e' ST='\\e\\\\' BEL='\\007' EOL='\n';;
	'w')	MODE='wname';;
	'?')	usage;;
	esac
fi

case $mode in
'title')
	case $TERM in
	[xkE]term*|rxvt*|cygwin|dtterm|termite)
		fmt="${ESC}]0;%s${BEL}";;
	screen*)
		fmt="${ESC}k%s${ST}";;
	vt300*)
		fmt="${ESC}]21;%s${ST}";;
	*)
		fmt="";;
	esac;;
'wname')
	case $TERM in
	screen*)
		fmt="${ESC}k%s${ST}";;
	*)
		fmt="";;
	esac;;
esac

title=${!OPTIND}

printf "${fmt}${EOL}" "$title"
