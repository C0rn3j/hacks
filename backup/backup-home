#!/usr/bin/env bash

rhost=null-backup
name=${HOSTNAME}-home

# Note: --exclude-caches requires the tag file to have specific contents.
# See the 'cachedir-tag' script for information.

tar -c --one-file-system --exclude-caches \
	--exclude-tag=".nobackup" "$HOME" \
	| bup split -r "${rhost}:" -n "${name}" -q
