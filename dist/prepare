#!/usr/bin/env bash
set -e

if ! test "$MAKELEVEL"; then
	cd ~/code
fi

ARCHOBJ="obj/arch.$MACHTYPE"
HOSTOBJ="obj/host.$HOSTNAME"

# ensure $ARCHOBJ and $HOSTOBJ

if test ! -d "$ARCHOBJ"; then
	mkdir -p "$ARCHOBJ"
fi

if test -L "$HOSTOBJ" || test ! -e "$HOSTOBJ"; then
	ln -nsf "${ARCHOBJ##*/}" "$HOSTOBJ"
fi
