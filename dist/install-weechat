#!/bin/bash -ex

repo=git://git.sv.gnu.org/weechat.git
src=~/src/weechat
prefix=~/lib/weechat
ruby=$(which ruby)

commit="$1"

if [ ! -d "$src" ]; then
	git clone "$repo" "$src"
fi

cd "$src"
git fetch

if [ "$commit" ]; then
	git checkout -f "$commit"
else
	git checkout -f master
	git merge --ff-only @{upstream}
fi

git clean -fdx

mkdir build
cd build

cmake .. -DPREFIX="$prefix" -DRUBY_EXECUTABLE="$ruby" \
	-DENABLE_NLS=OFF -DCMAKE_BUILD_TYPE=Debug

make
make install
