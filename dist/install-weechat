#!/usr/bin/env bash
. lib.bash || exit

if [[ ! "$PREFIX" ]]; then
	die "\$PREFIX not set"
fi

repo=git://github.com/weechat/weechat.git
src=~/src/weechat
ruby=$(which ruby)

commit="$1"

if [[ ! "$ruby" ]]; then
	die "missing 'ruby' executable"
fi

if [[ -d "$src" ]]; then
	cd "$src"
	if [[ "$(git config remote.origin.url)" != "$repo" ]]; then
		git config remote.origin.url "$repo"
	fi
	log "updating $src"
	git fetch
else
	log "cloning $repo to $src"
	git clone "$repo" "$src"
	cd "$src"
fi

if [[ "$commit" ]]; then
	git checkout -f "$commit"
else
	git checkout -f master
	git merge --ff-only '@{upstream}'
fi

git clean -fdx

mkdir build
cd build

cmake .. -DCMAKE_INSTALL_PREFIX="$PREFIX" -DRUBY_EXECUTABLE="$ruby" \
	-DENABLE_NLS=OFF -DCMAKE_BUILD_TYPE="Debug"

make
make install
