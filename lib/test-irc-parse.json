// just prefix and/or tags
"",				[]
":",				[":"]
"foo",				["foo"]
":bar",				[":bar"]
"@baz",				["@baz"]
"@foo :bar",			["@foo", ":bar"]

// normal
"foo bar baz",			["foo", "bar", "baz"]
"foo bar :baz",			["foo", "bar", "baz"]
"foo bar :baz asdf",		["foo", "bar", "baz asdf"]
"foo bar :",			["foo", "bar", ""]
"foo bar :  ",			["foo", "bar", "  "]
"foo bar : baz asdf",		["foo", "bar", " baz asdf"]

// prefixed
":foo bar baz",			[":foo", "bar", "baz"]
":foo bar :baz",		[":foo", "bar", "baz"]
":foo bar :baz asdf",		[":foo", "bar", "baz asdf"]
":foo bar :",			[":foo", "bar", ""]
":foo bar :  ",			[":foo", "bar", "  "]
":foo bar : baz asdf",		[":foo", "bar", " baz asdf"]

// tagged
"@foo bar baz",			["@foo", "bar", "baz"]
"@foo bar :baz",		["@foo", "bar", "baz"]
"@foo bar :baz asdf",		["@foo", "bar", "baz asdf"]
"@foo bar :",			["@foo", "bar", ""]
"@foo bar :  ",			["@foo", "bar", "  "]
"@foo bar : baz asdf",		["@foo", "bar", " baz asdf"]

// prefixed and tagged
"@foo :foo bar baz",		["@foo", ":foo", "bar", "baz"]
"@foo :foo bar :baz",		["@foo", ":foo", "bar", "baz"]
"@foo :foo bar :baz asdf",	["@foo", ":foo", "bar", "baz asdf"]
"@foo :foo bar :",		["@foo", ":foo", "bar", ""]
"@foo :foo bar :  ",		["@foo", ":foo", "bar", "  "]
"@foo :foo bar : baz asdf",	["@foo", ":foo", "bar", " baz asdf"]

// trailing only
":foo :baz asdf",		[":foo", "baz asdf"]
"@foo :baz asdf",		["@foo", ":baz", "asdf"]
"@foo :foo :baz asdf",		["@foo", ":foo", "baz asdf"]

// leading whitespace
" foo bar baz",			null
" :foo bar baz",		null
" @foo bar baz",		null

// middle whitespace
"foo   bar     baz   :asdf  ",	["foo", "bar", "baz", "asdf  "]
":foo  bar  baz   :  asdf",	[":foo", "bar", "baz", "  asdf"]
"@foo  bar  baz   :  asdf",	["@foo", "bar", "baz", "  asdf"]

// trailing whitespace
"foo bar baz   ",		["foo", "bar", "baz"]
"foo bar :baz   ",		["foo", "bar", "baz   "]

// tabs
"foo bar\tbaz asdf",		["foo", "bar\tbaz", "asdf"]
"foo bar :baz asdf\t",		["foo", "bar", "baz asdf\t"]
